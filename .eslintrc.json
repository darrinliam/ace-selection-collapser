{
    "env": {
	    "browser": true,
		"es6": true,
		"mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
	  "eqeqeq": 1,
	  "no-var": "error",
	  "no-mixed-spaces-and-tabs": "off",
	  "no-unused-vars" : "off"
    },
	"globals": {
	  "ace": true,
	  "Collapser" : true,
	  "expect": true,
	  "$": true
	}
	
}

